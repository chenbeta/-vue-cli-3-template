// header 开始
.home-header
  width 100%
  height 92px

  .header
    height 100%
    background #E6E6E6

// header 结束
.home-content
  display flex
  min-height calc(100vh - 94px - 80px)

  .left-box
    width 200px
    height 100%

  .content-box
    flex 1
    border-left 1px solid #E6E6E6

.home-footer
  height 80px
  border 1px solid #E6E6E6

  .copyright
    font-size 16px
    color #333
    line-height 80px
    text-align center